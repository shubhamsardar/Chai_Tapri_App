<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChangePinActivity">

    <EditText
        android:id="@+id/oldpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Enter Old PIN"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:padding="16dp"
        android:textColor="@color/colorPrimary"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:fontFamily="@font/rajdhani_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Enter New PIN"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:padding="16dp"
        android:textColor="@color/colorPrimary"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:fontFamily="@font/rajdhani_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oldpin" />

    <EditText
        android:id="@+id/reenternewpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Re-enter New Pin"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:padding="16dp"
        android:textColor="@color/colorPrimary"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:fontFamily="@font/rajdhani_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newpin" />

    <Button
        android:id="@+id/submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_main_selector"
        android:text="Submit"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:fontFamily="@font/rajdhani_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reenternewpin"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>